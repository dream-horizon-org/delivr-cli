{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "./bin",
    "rootDir": ".",
    "skipLibCheck": true,
    
    // Relaxed for backward compatibility with script/ folder
    "noImplicitAny": false,
    "strict": false,
    
    // Enable for better IDE support
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "script/**/*"
  ],
  "exclude": [
    "./bin",
    "./node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}